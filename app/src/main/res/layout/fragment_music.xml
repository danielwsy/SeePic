<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <com.flyco.tablayout.SlidingTabLayout xmlns:tl="http://schemas.android.com/apk/res-auto"
            android:layout_centerInParent="true"
            android:foregroundGravity="center"
            android:id="@+id/SlidingTabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_edit"
            android:background="@color/top"
            tl:tl_indicator_gravity="BOTTOM"
            tl:tl_indicator_style="NORMAL"
            tl:tl_indicator_color="@color/white"
            tl:tl_textSelectColor="@color/white"
            tl:tl_textsize="14sp" />

    </RelativeLayout>

    <com.seeme.daniel.seepic.view.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>